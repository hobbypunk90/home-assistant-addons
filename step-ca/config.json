
{
    "name": "step-ca",
    "version": "0.25.0",
    "slug": "step-ca",
    "description": "step-ca is an online Certificate Authority (CA) for secure, automated X.509 and SSH certificate management.",
    "url": "https://github.com/hobbypunk90/Hassio-Addons/tree/master/step-ca",
    "arch": [
      "armhf",
      "armv7",
      "aarch64",
      "amd64",
      "i386"
    ],
    "homeassistant": "2021.11.0",
    "startup": "application",
    "boot": "auto",
    "hassio_api": true,
    "hassio_role": "default",
    "ports": {
      "9000/tcp": 9000
    },
    "ports_description": {
      "9000/tcp": "authority port for certificate generation"
    },
    "ingress": false,
    "map": [
      "ssl:rw"
    ],
    "options": {
      "password": "",
      "debug": false
    },
    "schema": {
      "password": "password",
      "debug": "bool"
    }
  }
  